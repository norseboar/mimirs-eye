{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Allows fact-checking any site with Mimir's Eye",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["borderify.js"]
    }
  ]
}
